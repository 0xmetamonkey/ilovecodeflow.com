---
import "./GithubUsername.scss"

const hearts = ['💙','💚','💛','🧡','💜','💕','💞','💘','💝','😍','😻'];
const username = Astro.props.is?Astro.props.is : 'octocat';
---


<div class="message">
  <div class="comment"><slot /></div>
  <img src={`https://github.com/${username}.png`} />
  <div class="from">Published with <span class="emoji">{hearts[Math.floor(Math.random()*hearts.length)]}</span> by <a href={`https://github.com/${username}`}>{username}</a></div>
</div>
